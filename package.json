{
  "name": "git-commit-tool",
  "version": "1.1.13",
  "description": "use an interactive approach to help you generate standard submission messages",
  "bin": {
    "commit": "bin/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "rm -rf es && tsx ./build.ts",
    "prepare": "husky install",
    "lint-fix": "eslint --fix . && prettier --write .",
    "release": "npm run build && bumpp --commit --push --tag && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wChenonly/git-commit-tool.git"
  },
  "author": "wChenonly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wChenonly/git-commit-tool/issues"
  },
  "homepage": "https://github.com/wChenonly/git-commit-tool#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/ini": "^1.3.31",
    "@types/inquirer": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "bumpp": "^8.2.1",
    "esbuild": "^0.16.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "nano-staged": "^0.8.0",
    "prettier": "^2.8.1",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.1.2",
    "current-git-branch": "^1.1.0",
    "execa": "^6.1.0",
    "git-needs-pull": "^2.1.0",
    "ini": "^3.0.1",
    "inquirer": "^9.1.4",
    "is-git-added": "^1.0.2",
    "is-git-repository": "^2.0.0",
    "open": "^8.4.0",
    "ora": "^6.1.2"
  },
  "nano-staged": {
    "*.{ts,tsx,js,jsx,vue}": "eslint --fix",
    "*.{ts,tsx,js,jsx,vue,less,css,md}": "prettier --write"
  },
  "files": [
    "es",
    "bin"
  ],
  "keywords": [
    "git",
    "commit",
    "tool",
    "gerrit",
    "cli",
    "push",
    "commit-message",
    "npm",
    "git-emoji"
  ]
}
