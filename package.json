{
  "name": "git-commit-tool",
  "version": "1.1.2",
  "description": "use an interactive approach to help you generate standard submission messages",
  "bin": {
    "commit": "bin/index.js"
  },
  "type": "module",
  "scripts": {
    "dev": "rollup -w -c",
    "build": "rollup -c",
    "prepare": "husky install",
    "lint-fix": " eslint --fix . && prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wChenonly/commit-tool.git"
  },
  "author": "wChenonly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wChenonly/commit-tool/issues"
  },
  "homepage": "https://github.com/wChenonly/commit-tool#readme",
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/inquirer": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rollup": "^2.72.1",
    "rollup-plugin-cleandir": "^2.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "cac": "^6.7.12",
    "chalk": "5.*",
    "current-git-branch": "^1.1.0",
    "execa": "^6.1.0",
    "git-needs-pull": "^2.1.0",
    "inquirer": "^8.2.4",
    "is-git-added": "^1.0.2",
    "is-git-repository": "^2.0.0",
    "ora": "^6.1.0"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{ts,tsx,js,vue,less,scss}": "prettier --write"
  }
}
