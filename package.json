{
  "name": "git-commit-tool",
  "version": "1.1.10",
  "description": "use an interactive approach to help you generate standard submission messages",
  "bin": {
    "commit": "bin/index.js"
  },
  "type": "module",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "prepare": "husky install",
    "lint-fix": " eslint --fix . && prettier --write .",
    "release": "npm run build && bumpp --commit --push --tag && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wChenonly/git-commit-tool.git"
  },
  "author": "wChenonly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wChenonly/git-commit-tool/issues"
  },
  "homepage": "https://github.com/wChenonly/git-commit-tool#readme",
  "devDependencies": {
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/ini": "^1.3.31",
    "@types/inquirer": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "nano-staged": "^0.8.0",
    "prettier": "^2.7.1",
    "rollup": "^3.2.3",
    "rollup-plugin-cleandir": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.1.2",
    "current-git-branch": "^1.1.0",
    "execa": "^6.1.0",
    "git-needs-pull": "^2.1.0",
    "ini": "^3.0.1",
    "inquirer": "^9.1.4",
    "is-git-added": "^1.0.2",
    "is-git-repository": "^2.0.0",
    "open": "^8.4.0",
    "ora": "^6.1.2"
  },
  "nano-staged": {
    "*.{ts,tsx,js,jsx,vue}": "eslint --fix",
    "*.{ts,tsx,js,jsx,vue,less,css,md}": "prettier --write"
  },
  "files": [
    "lib",
    "bin"
  ],
  "keywords": [
    "git",
    "commit",
    "tool",
    "gerrit",
    "cli",
    "push",
    "commit-message",
    "npm",
    "git-emoji"
  ]
}
